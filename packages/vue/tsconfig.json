{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "noEmit": true,
    "paths": {
      "@ui/*": ["../ui/app/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.vue", "../ui/app/**/*.ts", "../ui/app/**/*.vue"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
